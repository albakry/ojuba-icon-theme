[ $# -lt 1 ] && {
cat <<EOS
Usage: $(basename $0) FILES
swap positions of #RRGGBB to RRBBGG
if input is blue it will become green
Black, gray and white will remain as is.
EOS
exit 1
}

perl -i -wpe 's/#([0-9A-F])([0-9A-F])([0-9A-F])(?![0-9A-F])/#${1}${3}${2}/ig' $@

perl -i -wpe 's/#([0-9A-F][0-9A-F])([0-9A-F][0-9A-F])([0-9A-F][0-9A-F])(?![0-9A-F])/#${1}${3}${2}/ig' $@

perl -i -wpe 's/rgb\((\d+),(\d+),(\d+)\)/rgb(${1},${3},${2})/' $@

